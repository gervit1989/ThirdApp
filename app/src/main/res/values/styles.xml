<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/app_login_back</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomCard">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/corner_radius_size</item>
        <item name="contentPadding">@dimen/content_padding_size</item>
        <item name="cardElevation">@dimen/elevation_size</item>
    </style>

    <style name="CustomCard.LoginCard">
        <item name="android:layout_marginLeft">@dimen/card_lr_margin</item>
        <item name="android:layout_marginRight">@dimen/card_lr_margin</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_size</item>
    </style>

    <style name="CustomCard.LoginCardLand">
        <item name="android:layout_marginLeft">@dimen/card_lr_margin</item>
        <item name="android:layout_marginRight">@dimen/card_lr_margin</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_size</item>
        <item name="contentPadding">@dimen/content_padding_land_size</item>
    </style>

    <style name="CustomCard.ProductCard">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomNavigationDrawer" parent="Widget.Design.NavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="itemBackground">@drawable/nav_drawer_item_selector</item>
        <item name="itemIconTint">@color/nav_icon_color_selector</item>
        <item name="itemTextColor">@color/nav_color_selector</item>
    </style>

    <style name="CountBtn">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="ProductText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="ProductText.ProductTitle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">12dp</item>
        <!--item name="fontFamily">@string/roboto_regular</item-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProductText.ProductDescription">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <!--item name="fontFamily">@string/roboto_medium</item-->
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProductText.LabelPrice">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ProductText.ValuePrice">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/btn_lr_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_lr_margin</item>
    </style>

    <style name="CustomButtonLand">
        <item name="android:layout_height">@dimen/btn_land_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/btn_lr_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_lr_margin</item>
    </style>

    <style name="CustomEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standart_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="StartButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShowButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="custom_dialog">
        <item name="android:color">@color/colorAccent</item>
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <color name="grey">#5d5d5d</color>
</resources>
